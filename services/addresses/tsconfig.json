{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // must match
    "moduleResolution": "NodeNext", // ESM-friendly
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}